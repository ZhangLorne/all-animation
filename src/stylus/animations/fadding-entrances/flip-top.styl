.flip-top {
	setAnimation(flipTop 1 1s ease-out forwards);
}

/* FLIP TOP */
@-webkit-keyframes flipTop {
	0%{
		-webkit-transform: translateY(-100px);
		opacity: 0;
	}
	70%{
		-webkit-transform: translateY(0);
		opacity: 1;
	}
	100% {
		opacity: 1;
		visibility: visible;
	}
}
